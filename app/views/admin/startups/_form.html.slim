= semantic_form_for [:admin, @startup] do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.inputs 'Startup Details' do
    = f.input :product_name, required: true
    = f.input :product_description, required: true
    = f.input :level, include_blank: false, required: true
    = f.input :faculty, collection: Faculty.all
    = f.input :presentation_link
    = f.input :product_video_link
    = f.input :wireframe_link
    = f.input :prototype_link
    = f.input :legal_registered_name
    = f.input :agreement_signed_at, as: :date_select
    = f.input :logo
    = f.input :website, input_html: { maxlength: nil }
    = f.input :twitter_link
    = f.input :facebook_link
    = f.input :startup_categories, hint: "Max: 3, Min: 1", input_html: { style: "width: 400px;" }
    = f.input :founders, collection: Hash[@startup.possible_founders.map{ |b| [b.to_s,b.id] }], input_html: { style: "width: 400px;" }
    = f.input :registration_type, collection: Startup.valid_registration_types
    = f.input :address
    = f.input :slug
    = f.input :payment_reference
    = f.input :team_lead_id, as: :select, collection: @startup.founders.map{ |f| [f.to_s,f.id] }

    = f.input :tag_list,
      as: :select,
      collection: Startup.tag_counts_on(:tags).pluck(:name),
      multiple: true
    = f.input :partnership_deed, as: :file
    = f.input :agreements_verified
  = f.submit
