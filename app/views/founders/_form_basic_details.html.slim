  = f.input :personal_website_url, label: 'Personal Website URL', input_html: { maxlength: 255 }
  = f.input :blog_url, label: 'Blog URL', input_html: { maxlength: 255 }
  = f.input :angel_co_url, label: 'AngelList Profile URL', input_html: { maxlength: 255 }
  = f.input :github_url, label: 'Github Profile URL', input_html: { maxlength: 255 }
  = f.input :behance_url, label: 'Behance Portfolio URL', input_html: { maxlength: 255 }

