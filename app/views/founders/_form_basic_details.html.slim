= simple_form_for founder, :html => { class: 'form-horizontal' }, wrapper: :horizontal_form, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, boolean: :horizontal_boolean, file: :horizontal_file_input } do |f|
  legend Basic details

  = f.error_notification

  = f.input :name, input_html: { maxlength: 255 }, required: true
  = f.input :born_on, as: :string, required: true, label: 'Date of birth', placeholder: 'YYYY-MM-DD', input_html: { class: 'date-picker', data: { format: 'Y-m-d' } }
  = f.input :phone, input_html: { required: true, maxlength: 17, type: 'tel', pattern: MobileNumberValidator::FORM_EXPRESSION }, label: 'Phone Number'
  = f.input :avatar, as: :image_preview, input_html: { preview_version: :thumb, accept: 'image/*' }
  = f.input :about, label: 'One-Liner', placeholder: 'One-liner about yourself', input_html: { maxlength: 255 }

  - if founder.startup.present?
    = f.input :roles, label: 'Role at Startup', as: :select, collection: Founder.valid_roles, label_method: ->(role) { t "founder.#{role}" }, include_hidden: false, input_html: { multiple: true }

  = f.input :slack_username, label: (link_to 'Public Slack Username<sup>?</sup></a>'.html_safe, about_slack_url, target: '_blank'), placeholder: 'mention_name (excluding @)'
  = f.input :skype_id, label: 'Skype Id'
  = f.input :communication_address
  = f.input :identification_proof, label: 'ID Proof', as: :file, hint: founder.identification_proof_hint

  - college_hint = "Currently set to <strong>#{f.object.college.name}</strong>".html_safe if f.object.college.present?
  = f.input :college_id,
    type: :hidden,
    label: 'College',
    placeholder: 'Please pick your college',
    input_html: { value: nil, 'data-search-url' => colleges_url },
    required: false,
    hint: college_hint

  = f.input :roll_number, label: 'University Roll Number'
  = f.input :college_identification, label: 'College ID', as: :image_preview, input_html: { preview_version: :thumb, accept: 'image/*' }
  = f.input :course, placeholder: 'B-tech in Computer Science'
  = f.input :semester, placeholder: 'IV'
  = f.input :year_of_graduation, as: :select, collection: 2014..2020

  .form-group
    .col-sm-offset-3.col-sm-9
      = f.button :submit, 'Update basic details', class: 'btn btn-primary btn-flat'

