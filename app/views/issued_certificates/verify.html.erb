<% presenter = IssuedCertificates::VerifyPresenter.new(self, @issued_certificate) %>

<% content_for(:head) do %>
  <title>Certificate <%= presenter.serial_number %></title>
  <%= javascript_tag nil, src: "https://cdn.jsdelivr.net/gh/davidshimjs/qrcodejs/qrcode.min.js", nonce: true %>
<% end %>

<% content_for(:tail) do %>
  <%= javascript_pack_tag 'IssuedCertificatesVerifyPack', nonce: true %>
<% end %>

<script type="application/json" id="react-root-data"><%= presenter.props_to_json.html_safe %></script>

<div id="react-root"></div>
