<% presenter = ::Layouts::SchoolPresenter.new(self) %>

<% content_for(:viewport) do %>
  <meta name="viewport"/>
<% end %>

<% content_for(:head) do %>
  <%= stylesheet_pack_tag 'schools/shared/shared', media: 'all' %>
<% end %>

<% content_for(:wrapper) do %>
  <div class="antialiased flex h-screen overflow-hidden">
    <div class="flex global-sidebar">
      <div class="bg-gradient-primary-600-to-primary-800-to-bottom global-sidebar__primary-nav global-sidebar__primary-nav--expanded flex flex-col justify-between overflow-y-auto">
        <div>
          <div class="global-sidebar__header px-5 py-2 relative z-20 border-r border-b bg-white flex h-16 items-center">
            <div class="global-sidebar__school-logo-container flex items-center bg-white h-12 w-2/5 rounded">
              <%= image_tag(presenter.school_logo_path, alt: current_school.name) %>
            </div>
            <div class="flex global-sidebar__school-search rounded justify-end w-1/2">
              <!--                          <div class="global-sidebar__school-search__icon-box flex items-center justify-center border rounded w-16">-->
              <!--                            <i class="fas fa-search"></i>-->
              <!--                          </div>-->
            </div>
          </div>
          <ul>
            <li>
              <%= link_to school_path, class: presenter.nav_link_classes(school_path) do %>
                <i class="fal fa-eye fa-fw text-lg mr-2"></i>
                <span>Overview</span>
              <% end %>
            </li>
            <li>
              <%= link_to school_coaches_path, class: presenter.nav_link_classes(school_coaches_path) do %>
                <i class="fal fa-chalkboard-teacher fa-fw text-lg mr-2"></i>
                <span>Coaches</span>
              <% end %>
            </li>
            <li>
              <%= link_to customize_school_path, class: presenter.nav_link_classes(customize_school_path) do %>
                <i class="fal fa-cog fa-fw text-lg mr-2"></i>
                <span>Settings</span>
              <% end %>
            </li>
            <li>
              <%= link_to school_courses_path, class: presenter.nav_link_classes(school_courses_path) do %>
                <i class="fal fa-books fa-fw text-lg mr-2"></i>
                <span>Courses</span>
              <% end %>
              <ul class="pr-4 pb-4 ml-10 mt-1">
                <% @courses.each do |course| %>
                  <li><%= link_to course.name, school_course_students_path(course), class: 'block text-white py-3 px-4 hover:bg-primary-800 rounded font-semibold text-xs' %></li>
                <% end %>
              </ul>
            </li>
            <li>
              <%= link_to school_communities_path, class: presenter.nav_link_classes(school_communities_path) do %>
                <i class="fal fa-users-class fa-fw text-lg mr-2"></i>
                <span>Communities</span>
              <% end %>
            </li>
          </ul>
        </div>
        <ul>
          <% if presenter.founder_profile? %>
            <li>
              <%= link_to home_path, class: 'flex text-white text-sm py-4 px-5 hover:bg-primary-900 font-semibold items-center' do %>
                <i class="fal fa-home-alt fa-fw"></i>
                <span class="ml-2">Home</span>
              <% end %>
            </li>
          <% end %>
          <% if presenter.coach_profile? %>
            <li>
              <%= link_to presenter.coach_dashboard_path, class: 'flex text-white text-sm py-4 px-5 hover:bg-primary-900 font-semibold items-center' do %>
                <i class="fal fa-clipboard-check fa-fw"></i>
                <span class="ml-2">Review Submissions</span>
              <% end %>
            </li>
          <% end %>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: 'flex text-white text-sm py-4 px-5 hover:bg-primary-900 font-semibold items-center' do %>
              <i class="fal fa-sign-out fa-fw"></i>
              <span class="ml-2">Log Out</span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <%= yield %>
  </div>
<% end %>

<%= render template: 'layouts/tailwind' %>
