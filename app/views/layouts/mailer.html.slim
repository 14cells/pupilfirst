html lang='en'
  head
    = stylesheet_link_tag 'mails'
  body
    table.mail-table
      tbody
        tr
          td
            table.mail-logo-table
              tbody
                tr
                  td.mail-logo-td
                    a.mail-logo-link href="https://sv.co/" title="SV.CO" target="_blank"
                      = image_tag 'shared/logo-color.svg', class: 'mailer__logo'

            table.mail-body-table
              tbody
                tr
                  td
                    h1.mail-heading #{yield :heading}
                    p.mail-salutation #{yield :salutation}
                    = yield :body
                    p.mail-signature Team SV.CO

            table.mail-footer-table
              tbody
                tr
                  td
                    p
                      ' This email has been sent to you by
                      = link_to 'SV.CO', root_url
