<% presenter = ::Layouts::CoursePresenter.new(self) %>
<% content_for(:head) do %>
  <%= javascript_pack_tag 'layouts/courses', 'data-turbolinks-track': 'reload', nonce: true %>
  <%= stylesheet_pack_tag 'schools/shared/shared', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<% content_for(:wrapper) do %>
  <div class="antialiased flex h-screen">
    <div class="flex global-sidebar">
      <div class="bg-gradient-primary-to-primary-darker-to-bottom global-sidebar__primary-nav global-sidebar__primary-nav--shrinked text-purple-lighter flex flex-col justify-between">
        <div>
          <div class="global-sidebar__header mx-auto">
            <div class="global-sidebar__school-logo-container flex items-center justify-center my-2">
              <%= link_to school_path, class: 'p-2 bg-white h-12 w-12 rounded' do %>
                <%= image_tag(presenter.school_icon_path, alt: current_school.name) %>
              <% end %>
            </div>
          </div>
          <ul class="list-reset">
            <li>
              <%= link_to school_path, class:'global-sidebar__primary-nav-link p-4 justify-center' do%>
                <i class="material-icons md-48">vertical_split</i>
              <% end %>
            </li>
            <li>
              <% classes = 'global-sidebar__primary-nav-link p-4 justify-center' %>
              <% classes += controller_name.in?(%w(curricula founders faculty)) ? ' global-sidebar__primary-nav-link--active' : '' %>
              <%= link_to school_courses_path, class: classes do %>
                <i class="material-icons md-48">description</i>
              <% end %>
            </li>
          </ul>
        </div>
        <ul class="list-reset">
          <% if presenter.founder_profile?(@course) %>
            <li>
              <%= link_to student_dashboard_path, class: 'flex text-white py-3 px-4 hover:bg-primary-darkest font-semibold no-underline items-center' do %>
                <i class="material-icons md-48 mr-2">visibility</i>
              <% end %>
            </li>
          <% end %>
          <% if presenter.coach_profile?(@course) %>
            <li>
              <%= link_to course_coach_dashboard_path(@course), class: 'flex text-white py-3 px-4 hover:bg-primary-darkest font-semibold no-underline items-center' do %>
                <i class="material-icons md-48 mr-2">assignment_turned_in</i>
              <% end %>
            </li>
          <% end %>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: 'flex text-white py-3 px-4 hover:bg-primary-darkest font-semibold no-underline items-center' do %>
              <i class="material-icons md-48 mr-2">power_settings_new</i>
            <% end %>
          </li>
        </ul>
      </div>

      <div class="bg-grey-lighter global-sidebar__secondary-nav w-full border-r border-grey-light pb-6 hidden md:block">
        <ul class="list-reset p-4">
          <% default_classes = 'flex text-indigo-darker py-3 px-4 hover:bg-grey-light focus:bg-grey-light font-semibold rounded no-underline items-center my-1' %>
          <% selected_classes = ' bg-grey-light' %>
          <li>
            <div id="layouts-courses" data-props="<%= presenter.react_props(@course).to_json %>"></div>
          </li>
          <li><%= link_to 'Students', school_course_students_path(@course), class: (default_classes + (current_page?(school_course_students_path(@course)) ? selected_classes : '')) %></li>
          <li><%= link_to 'Coaches', school_course_coaches_path(@course), class: (default_classes + (current_page?(school_course_coaches_path(@course)) ? selected_classes : '')) %></li>
          <li><%= link_to 'Curriculum', school_course_curriculum_path(@course), class: (default_classes + (current_page?(school_course_curriculum_path(@course)) ? selected_classes : '')) %></li>
        </ul>
      </div>
    </div>

    <%= yield %>
  </div>
<% end %>

<%= render template: 'layouts/tailwind' %>
