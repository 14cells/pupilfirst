#sv-navbar.collapse.navbar-collapse.justify-content-end.navbar-link__container
  ul.navbar-nav.align-items-lg-center itemscope="itemscope" itemtype="http://www.schema.org/SiteNavigationElement"
    - unless current_founder
      li.nav-item.navbar-nav__nav-item role="presentation" itemprop="name"
        = link_to 'VR Program', fb_path, class: 'nav-item__link', itemprop: 'url', id: 'sv-navbar__fb-link'
    / - unless current_founder
      li.nav-item.navbar-nav__nav-item role="presentation" itemprop="name"
        = link_to 'Apply', apply_path, class: 'nav-item__link', itemprop: 'url', id: 'sv-navbar__join-link'
    - if current_user && current_user&.faculty&.startups.present?
      li.nav-item.navbar-nav__nav-item role="presentation"
        a#sv-navbar__dashboard-link.nav-item__link href="#{coaches_dashboard_url}" Review Dashboard
    - if current_founder && !current_founder.exited && current_founder.startup.present?
      li.nav-item.navbar-nav__nav-item role="presentation"
        a#sv-navbar__dashboard-link.nav-item__link href="#{student_dashboard_url}" Dashboard
    - if current_founder&.startup.present? && policy(current_founder.startup).show?
      / li.nav-item.navbar-nav__nav-item role="presentation" itemprop="name"
        a#sv-navbar__timeline-link.nav-item__link href="#{product_url(current_founder.startup.id, current_founder.startup.slug)}" Timeline
    / li.nav-item.navbar-nav__nav-item role="presentation" itemprop="name"
      = link_to 'Teams', startups_path, class: 'nav-item__link', id: 'sv-navbar__startups-link'
    / - unless current_founder
    /   li.nav-item.navbar-nav__nav-item role="presentation" itemprop="name"
    /     = link_to 'Invest/Hire', talent_path, class: 'nav-item__link', id: 'sv-navbar__talent-link'
    / li.nav-item.navbar-nav__nav-item role="presentation" itemprop="name"
      = link_to 'Faculty', faculty_index_path, class: 'nav-item__link', id: 'sv-navbar__faculty-link'
    - unless current_founder
      li.nav-item.navbar-nav__nav-item role="presentation" itemprop="name"
        = link_to 'About', about_path, class: 'nav-item__link', id: 'sv-navbar__about-link'
    / - if current_founder && !current_founder.exited && current_founder.startup.present?
      li.nav-item.navbar-nav__nav-item role="presentation" itemprop="name"
        = link_to 'Library', resources_path, class: 'nav-item__link', id: 'sv-navbar__library-link'
    / li.nav-item.navbar-nav__nav-item role="presentation" itemprop="name"
    /   = link_to 'Stats', stats_path, class: 'nav-item__link'

    - if current_user
      - if current_founder
        li.nav-item.navbar-nav__nav-item role="presentation" class="dropdown"
          a#navbar-profile-dropdown.dropdown-toggle.logged-in-avatar-link data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"
            .navbar__avatar-wrapper
              == avatar(current_founder.name, founder: current_founder)
          ul.dropdown-menu
            - if policy(current_founder).founder_profile?
              li role="presentation"
                = link_to student_profile_path(slug: current_founder.slug) do
                  i.fa.fa-list-ul
                  | Profile
            - if policy(current_startup).billing?
              li role="presentation"
                = link_to billing_startup_path do
                  i.fa.fa-credit-card
                  | Billing
            - if policy(PlatformFeedback).create?
              li role="presentation"
                a href="#" data-toggle="modal" data-target="#platform-feedback-modal"
                  i.fa.fa-comment-o
                  | Submit Feedback
            - if policy(current_founder).select?
              - current_user.founders.where.not(id: current_founder.id).each do |other_founder|
                li role="presentation"
                  = link_to(select_founder_path(other_founder), method: :post) do
                    i.fa.fa-university
                    = "#{other_founder.startup.course.name} Course"
            li role="presentation"
              = link_to destroy_user_session_path, method: :delete do
                i.fa.fa-sign-out
                | Logout
      - else
        li.nav-item role="presentation"
          = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-sm btn-ghost-secondary btn-signin', id: 'sv-navbar__sign-out'

    - elsif @hide_sign_in.blank?
      li.nav-item role="presentation" itemprop="name"
        = link_to 'Sign In', new_user_session_path, class: 'btn btn-sm btn-ghost-secondary btn-signin', rel: 'nofollow', itemprop: 'url', id: 'sv-navbar__sign-in'
