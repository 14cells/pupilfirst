#sv-navbar.collapse.navbar-collapse.justify-content-end.navbar-link__container
  ul.navbar-nav.align-items-lg-center
    - unless current_founder
      li.nav-item.navbar-nav__nav-item role="presentation"
        = link_to 'Join', join_path, class: 'nav-item__link', itemprop: 'url', id: 'sv-navbar__join-link'
    - if current_founder && !current_founder.exited && current_founder.startup.present?
      li.nav-item.navbar-nav__nav-item role="presentation"
        a#sv-navbar__dashboard-link.nav-item__link href="#{dashboard_founder_url}" Dashboard
    - if current_founder&.startup.present? && policy(current_founder.startup).show?
      li.nav-item.navbar-nav__nav-item role="presentation"
        a#sv-navbar__timeline-link.nav-item__link href="#{timeline_url(current_founder.startup.id, current_founder.startup.slug)}" Timeline
    li.nav-item.navbar-nav__nav-item role="presentation"
      = link_to 'Startups', startups_path, class: 'nav-item__link', id: 'sv-navbar__startups-link'
    - unless current_founder
      li.nav-item.navbar-nav__nav-item role="presentation"
        = link_to 'Invest & Hire', talent_path, class: 'nav-item__link', id: 'sv-navbar__talent-link'
    li.nav-item.navbar-nav__nav-item role="presentation"
      = link_to 'Faculty', faculty_index_path, class: 'nav-item__link', id: 'sv-navbar__faculty-link'
    - unless current_founder
      li.nav-item.navbar-nav__nav-item role="presentation"
        = link_to 'About', about_path, class: 'nav-item__link', id: 'sv-navbar__about-link'
    - if current_founder && !current_founder.exited && current_founder.startup.present?
      li.nav-item.navbar-nav__nav-item role="presentation"
        = link_to 'Library', resources_path, class: 'nav-item__link', id: 'sv-navbar__library-link'
    li.nav-item.navbar-nav__nav-item role="presentation"
      = link_to 'Stats', stats_path, class: 'nav-item__link'
    li.nav-item.navbar-nav__nav-item role="presentation"
      = link_to 'Help Center', 'https://help.sv.co', class: 'nav-item__link', id: 'sv-navbar__help-link'

    - if current_user
      - if current_founder
        li.nav-item.navbar-nav__nav-item role="presentation" class="dropdown"
          a#navbar-profile-dropdown.dropdown-toggle.logged-in-avatar-link data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"
            .navbar__avatar-wrapper
              == avatar(current_founder.name, founder: current_founder)
          ul.dropdown-menu
            - if policy(current_founder).founder_profile?
              li role="presentation"
                = link_to founder_profile_path(slug: current_founder.slug) do
                  i.fa.fa-list-ul
                  | Profile
            - if policy(PlatformFeedback).create?
              li role="presentation"
                a href="#" data-toggle="modal" data-target="#platform-feedback-modal"
                  i.fa.fa-comment-o
                  | Submit Feedback
            li role="presentation"
              = link_to destroy_user_session_path, method: :delete do
                i.fa.fa-sign-out
                | Logout
      - else
        li.nav-item role="presentation"
          = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-sm btn-ghost-secondary'

    - elsif @hide_sign_in.blank?
      li.nav-item role="presentation"
        = link_to 'Sign In', new_user_session_path, class: 'btn btn-sm btn-ghost-primary', rel: 'nofollow'
