<li class="nav-item navbar-nav__nav-item dropdown" role="presentation">
  <a id="<%= dropdown[:id] %>" class="nav-item__link nav-link dropdown-toggle" href="#" data-toggle="dropdown" role="button">
    <%= dropdown[:title] %>
  </a>

  <ul class="dropdown-menu" aria-labelledby="<%= dropdown[:id] %>">
    <% dropdown[:options].each do |link| %>
      <li>
        <%= link_to(link[:url], method: (link[:method] || :get), class: 'dropdown-item') do %>
          <%= link[:title] %>
        <% end %>
      </li>
    <% end %>
  </ul>
</li>
