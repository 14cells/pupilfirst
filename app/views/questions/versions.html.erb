<% content_for(:tail) do %>
  <%= stylesheet_pack_tag 'MarkdownViewPack', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'MarkdownViewPack', nonce: true %>
<% end %>
<% presenter = Questions::VersionsPresenter.new(self, @question) %>
<div class="bg-gray-100 justify-center flex py-4">
  <div class="mb-2 max-w-4xl">
    <div>
      <%= link_to "Back to Question", question_path(@question), class: "btn btn-default" %>
    </div>
    <div class="mt-2 inline-block mb-2 flex-1 bg-primary-100 rounded px-2 ">
      <span class="text-xs font-semibold text-primary-600">Question Edit History</span>
    </div>
    <div class="font-bold text-2xl"><%= @question.title %></div>
    <div class="flex items-center mt-1">
      <div class="font-black text-4xl px-4 text-gray-600 "> <%= presenter.version_number_for_question %></div>
      <div class="w-full flex mx-auto relative shadow bg-white border rounded-lg px-4 py-2">
        <div>
          <div class="markdown-text"
               id="<%= presenter.version_number_for_question %>"
               data-json-props="<%= presenter.markdown_props_for_questions %>"
          >
            <%= @question.description %>
          </div>
          <div>
            <span>Edited by</span>
            <span><%= presenter.editor_name_for_question %></span>
            <span><%= presenter.updated_at(@question) %></span>
          </div>
        </div>
      </div>

    </div>
    <% presenter.versions.each_with_index do |version, index| %>
      <div class="flex items-center mt-2">
        <div class="font-black text-4xl px-4 text-gray-600 "> <%= presenter.version_number(index) %></div>
        <div class="w-full flex flex-col mx-auto relative shadow bg-orange-100 border border-orange-400 rounded-lg px-4 py-2">
          <div id="<%= presenter.version_number(index) %>" data-json-props="<%= presenter.markdown_prop(version, index) %>" class="markdown-text">
            <%= version.value %>
          </div>
          <div>
            <span>Edited by</span>
            <span><%= presenter.name(version.user) %></span>
            <span><%= presenter.updated_at(version) %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
