<table class = "mail-maintable">
  <tbody>
    <tr>
      <td>
        <table class = "mail-innertable-logo">
          <tbody>
            <tr>
              <td class = "mail-td-logo">
                <a href="https://www.svlabs.in" title="Mobile ID" class="mail-sv-link" target="_blank">
                  <%= image_tag("logo.png", class:"mail-sv-logo") %>
                </a>
              </td>
            </tr>
          </tbody>
        </table>
        <table class = "mail-innertable-instruction">
          <tbody>
            <tr>
              <td>
                <p class = "mail-button-instruction"> Event posted by you has been registered </p>

                <p> Hi <%= @event.posters_name %>,</p>

                <p class = "mail-info" >Your Event with id: <%= @event.id %> has been submitted for approval. Once it has been approved, it will show up on the events portal. Please contact <%= mail_to "daniel@startupvillage.in" %> for further communication and remember to quote your event id.</p>

                <p class = "mail-svlabs-team">- The <span class="il">SV</span> <span class="il">LABS</span> team</p>
              </td>
            </tr>
          </tbody>
        </table>

        <table  class = "mail-footer">
          <tbody>
            <tr>
              <td>
                <p style="margin:0;padding:0px">
                  This email has been sent to you by <span class="il">StartUp</span> <span class="il">VIllage</span>
                </p>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>
