<%
  school_name = @school.name
  login_url = enroll_applicants_url(@applicant.login_token)
  course_name = @applicant.course.name
%>

<% content_for :title do %>
  Verify Your Email Address
<% end %>

<% content_for :subtitle do %>
  Let's get you started in the <%= course_name %> course!
<% end %>

<% content_for :title_button_text do %>
  Click to Verify Email
<% end %>

<% content_for(:title_button_link, login_url) %>

<% content_for :salutation do %>
  Hello,
<% end %>

<% content_for :body do %>
  <p>
    To activate your  <%= school_name %> Account, and enroll to the <%= course_name %> course, please verify your email
    address. Your account will not be created until your email address is confirmed.
  </p>

  <%= render 'mailers/link_fallback', url: login_url%>
<% end %>

<% content_for(:signature) do %>
  <div>
    <%= school_name %>
  </div>
<% end %>
